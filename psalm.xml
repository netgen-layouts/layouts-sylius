<?xml version="1.0"?>
<psalm
    errorLevel="2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="bundle" />
        <directory name="lib" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- Symfony -->

        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <referencedProperty name="Symfony\Component\Validator\ConstraintValidator::$context" />
                <referencedProperty name="Symfony\Component\Validator\Constraint::$groups" />
            </errorLevel>
        </PropertyNotSetInConstructor>

        <!-- Doctrine ORM -->

        <MoreSpecificReturnType>
            <errorLevel type="suppress">
                <directory name="lib/Collection/QueryType/Handler" />
            </errorLevel>
        </MoreSpecificReturnType>

        <LessSpecificReturnStatement>
            <errorLevel type="suppress">
                <directory name="lib/Collection/QueryType/Handler" />
            </errorLevel>
        </LessSpecificReturnStatement>

        <!-- Psalm specific -->

        <LessSpecificImplementedReturnType>
            <errorLevel type="suppress">
                <file name="lib/Security/Authorization/Voter/AdminAccessVoter.php" />
            </errorLevel>
        </LessSpecificImplementedReturnType>
    </issueHandlers>
</psalm>
