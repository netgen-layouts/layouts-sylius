{% extends nglayouts.pageLayoutTemplate %}

{% block layout %}
<div class="zone-layout-layout3">

    <div class="top-content-block">
        <section class="zone zone-header">
            {% nglayouts_render_zone 'header' %}
        </section>

        <section class="zone zone-post_header">
            {% nglayouts_render_zone 'post_header' %}
        </section>
    </div>

    <div class="main-content-block">
        <div class="ui two column stackable grid">
            <div class="six wide column">
                <section class="zone zone-left">
                    {% nglayouts_render_zone 'left' %}
                </section>
            </div>
            <div class="ten wide column">
                <section class="zone zone-right">
                    {% nglayouts_render_zone 'right' %}
                </section>
            </div>
        </div>
    </div>

    <div class="bottom-content-block">
        <section class="zone zone-pre_footer">
            {% nglayouts_render_zone 'pre_footer' %}
        </section>

        <section class="zone zone-footer">
            {% nglayouts_render_zone 'footer' %}
        </section>
    </div>

</div>
{% endblock %}
